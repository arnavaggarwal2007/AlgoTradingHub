# ==============================================================================
# Pre-Swing Trade Analysis Dashboard — Environment Variables
# ==============================================================================
# Copy this file to .env and fill in actual values
# DO NOT commit .env to version control (add to .gitignore)
#
# Command to generate SECRET_KEY:
#   openssl rand -hex 32
# ==============================================================================

# ──────────────────────────────────────────────────────────────────
# APPLICATION
# ──────────────────────────────────────────────────────────────────
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-openssl

# ──────────────────────────────────────────────────────────────────
# DATABASE
# ──────────────────────────────────────────────────────────────────
# Development (SQLite):
# DATABASE_URL=sqlite:///./app.db

# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/dashboard_prod

# Render.com Example:
# DATABASE_URL=postgresql://user:generated-password@dpg-xxxxx.render.com/dbname

DATABASE_URL=sqlite:///./app.db

# ──────────────────────────────────────────────────────────────────
# DATA FETCHING
# ──────────────────────────────────────────────────────────────────
DATA_PERIOD=2y
FETCH_TIMEOUT_SECONDS=20
MAX_FETCH_WORKERS=12
DATA_CACHE_TTL=900

# ──────────────────────────────────────────────────────────────────
# HOSTING & DOMAIN
# ──────────────────────────────────────────────────────────────────
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
DOMAIN=yourdomain.com

# ──────────────────────────────────────────────────────────────────
# SSL & SECURITY
# ──────────────────────────────────────────────────────────────────
# Render/Railway: auto-handled
# Hostinger: Let's Encrypt
# PythonAnywhere: included
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True

# ──────────────────────────────────────────────────────────────────
# AUTHENTICATION & USERS
# ──────────────────────────────────────────────────────────────────
# Optional: Auth0, Firebase, or custom auth
AUTH_PROVIDER=internal  # or "auth0", "firebase"
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# ──────────────────────────────────────────────────────────────────
# PAYMENTS & MONETIZATION
# ──────────────────────────────────────────────────────────────────
# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxx

# Pricing (in cents, so 999 = $9.99)
PREMIUM_PRICE_MONTHLY=999   # $9.99/month
API_PRICE_MONTHLY=9999      # $99.99/month

# ──────────────────────────────────────────────────────────────────
# EMAIL & NOTIFICATIONS
# ──────────────────────────────────────────────────────────────────
# SendGrid, Mailgun, AWS SES, etc.
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxx
SENDER_EMAIL=noreply@yourdomain.com

# ──────────────────────────────────────────────────────────────────
# MONITORING & LOGGING
# ──────────────────────────────────────────────────────────────────
# Sentry (error tracking)
SENTRY_DSN=https://key@sentry.io/project-id

# New Relic (performance monitoring)
NEW_RELIC_CONFIG_FILE=newrelic.ini
NEW_RELIC_ENVIRONMENT=production

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# ──────────────────────────────────────────────────────────────────
# DEPLOYMENT
# ──────────────────────────────────────────────────────────────────
# Gunicorn workers (leave empty to auto-detect from CPU count)
WORKERS=
WORKER_TIMEOUT=60

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# ──────────────────────────────────────────────────────────────────
# AUTO-BLOG SYSTEM
# ──────────────────────────────────────────────────────────────────
# OpenAI (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-...

# Your dashboard app URL (used in blog posts as CTA link)
DASHBOARD_URL=https://app.yourdomain.com

# WordPress connection
# How to get WP_APP_PASSWORD: WP Admin → Users → Profile → Application Passwords
WP_SITE_URL=https://yourdomain.com
WP_USERNAME=your_wp_admin_username
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx
WP_AUTHOR_ID=1
WP_POST_STATUS=publish          # use "draft" to review before publishing
WP_DEFAULT_CATEGORY_ID=1

# Affiliate program defaults (set primary broker)
AFFILIATE_NAME=Interactive Brokers
AFFILIATE_URL=https://yourdomain.com/go/ibkr

# Blog logging
BLOG_LOG_LEVEL=INFO
BLOG_LOG_FILE=/var/log/auto_blog.log

# ──────────────────────────────────────────────────────────────────
# EXTERNAL SERVICES
# ──────────────────────────────────────────────────────────────────
# yfinance (no API key needed)
YFINANCE_TIMEOUT=10

# ──────────────────────────────────────────────────────────────────
# OPTIONAL: ADVANCED FEATURES
# ──────────────────────────────────────────────────────────────────
# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/

# Discord notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/

# White label (for resellers)
WHITE_LABEL_MODE=False
CUSTOMER_NAME=Your Company
